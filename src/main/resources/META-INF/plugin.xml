<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>

    <id>com.guzz.ide.FloatingToolbarPlus</id>

    <name>FloatingToolbarPlus</name>

    <vendor email="guzzhao@live.com" url="https://github.com/guzzhao/FloatingToolbarPlus">guzzhao</vendor>

    <description><![CDATA[

       一个用于拓展floating toolbar的插件，支持变量重命名，支持变量名格式：
       <ul>
       <li>CamelCase </li>
       <li>PascalCase </li>
       <li>SnakeCase </li>
       <li>SnakePascalCase (Pascal_Case) </li>
       <li>SnakeUpperCase(UPPER_CASE) </li>
       <li>UpperCase </li>
       <li>LowerCase </li>
       <li>  // TODO</li>
       </ul>
        ------------------- <br />

        A toolbar for expanding floating toolbar, supporting variable renaming, change the variable :
       <ul>
       <li>CamelCase </li>
       <li>PascalCase </li>
       <li>SnakeCase </li>
       <li>SnakePascalCase (Pascal_Case) </li>
       <li>SnakeUpperCase(UPPER_CASE) </li>
       <li>UpperCase </li>
       <li>LowerCase </li>
       <li>  // TODO</li>
       </ul>
    ]]></description>
    <depends>com.intellij.modules.platform</depends>


    <extensions defaultExtensionNs="com.intellij">


    </extensions>
    <actions>
        <group id="FloatingToolbarPlusGroup"
               class="com.intellij.ui.codeFloatingToolbar.DropdownActionGroup"
               text="Tools"
               popup="true">
            <add-to-group group-id="Floating.CodeToolbar" anchor="last"/>
            <action id="CamelCaseAction"  class="com.guzz.ide.actions.name.CamelCaseAction" text="camelCase" description="CamelCase"/>
            <action id="PascalCaseAction"  class="com.guzz.ide.actions.name.PascalCaseAction" text="PascalCase" description="PascalCase"/>
            <action id="SnakeCaseAction"  class="com.guzz.ide.actions.name.SnakeCaseAction" text="snake__case" description="SnakeCase"/>
            <action id="SnakePascalCaseAction"  class="com.guzz.ide.actions.name.SnakePascalCaseAction" text="Snake__Pascal__Case" description="SnakePascalCase"/>
            <action id="SnakeUpperCaseAction"  class="com.guzz.ide.actions.name.SnakeUpperCaseAction" text="SNAKE__UPPER__CASE" description="SnakeUpperCase" />
            <action id="UpperCaseAction"  class="com.guzz.ide.actions.name.UpperCaseAction" text="UPPERCASE" description="UpperCase" />
            <action id="LowerCaseAction"  class="com.guzz.ide.actions.name.LowerCaseAction" text="lowercase" description="LowerCase" />
        </group>
    </actions>

</idea-plugin>
